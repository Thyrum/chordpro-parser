{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES6",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"strict": true,
		"allowJs": false
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
